<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout


    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mydonation.donatenow">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50dp"
        android:orientation="vertical">



    <Button
        android:id="@+id/btndonatestuff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Donate My Stuff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"/>

        <Button
            android:id="@+id/btncuentreqsts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Requests by Others"
            android:layout_above="@+id/btndonatestuff"
            android:layout_marginBottom="41dp" />

    <Button
        android:id="@+id/btnmatchedrequests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Matched Requests"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"/>

        <Button
            android:id="@+id/btndonations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Donations"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </LinearLayout>




</RelativeLayout>